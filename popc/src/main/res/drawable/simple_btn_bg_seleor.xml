            <corners android:radius="50dp" />

            <solid android:color="#FFFFFF" />

            <stroke android:color="@color/blue" android:width="1dp" />
        </shape></item>
    <item><shape>
            <corners android:radius="50dp" />

            <solid android:color="#f7f7f7" />
        </shape></item>

</selector>