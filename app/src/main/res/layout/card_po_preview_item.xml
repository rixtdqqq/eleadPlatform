<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/card_padding_Left"
    android:paddingLeft="@dimen/card_padding_Left"
    android:paddingRight="@dimen/card_padding_Top"
    android:paddingTop="@dimen/card_padding_Left">

    <ImageView
        android:id="@+id/imgres_ig"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_listv_1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/states_id"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/load_lose"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title_top_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/states_id"
                android:layout_toStartOf="@+id/states_id"
                android:ellipsize="end"
                android:maxWidth="230dp"
                android:singleLine="true"
                android:text="三朵云_MTL颗粒2016产品版本V02033"
                android:textColor="@color/fontcolors2"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="11sp"
                android:layout_height="11sp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1.5sp"
                android:src="@drawable/card_commit_time" />

            <TextView
                android:id="@+id/title_bottom_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上周质量评分:62.4分 SAI值:8.5 缺陷数:1 事件量:3 指标2:8.5  指标3:1"
                android:textColor="@color/fontcolors3"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_right_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/right_arrow" />
</LinearLayout>
