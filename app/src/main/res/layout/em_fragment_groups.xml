<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_friend_all_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/develop_tb_line">

        <ImageButton
            android:id="@+id/back_bt_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tranpant_bg_selector"
            android:scaleType="centerInside"
            android:src="@drawable/operation_back" />

        <TextView
            android:id="@+id/titl_Middle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/my_group"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_textsize" />

        <ImageView
            android:id="@+id/liao_tian_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/tranpant_bg_selector"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/liao_tian" />

        <ImageView
            android:id="@+id/search_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/liao_tian_iv"
            android:background="@drawable/tranpant_bg_selector"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/actionbar_search_icon" />
    </RelativeLayout>


    <com.elead.views.pulltorefresh.PullToRefreshListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>