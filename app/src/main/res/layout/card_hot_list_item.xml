<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:src="@drawable/card_listv_1" />

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/title_one_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Merchandise 01"
                android:textColor="#43C8C9"

                android:textSize="10dp" />

            <TextView
                android:id="@+id/content_one_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Readable content of a page"
                android:textColor="#3E454D"
                android:textSize="8dp"


                />

        </LinearLayout>

        <TextView
            android:id="@+id/number_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:drawableLeft="@drawable/card_eye"
            android:text="1,232"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="15dp"
            android:text="last sale today"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/amount_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
                android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="15 sale"
            android:textSize="8dp" />
    </LinearLayout>


</LinearLayout>