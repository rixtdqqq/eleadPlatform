<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/line_top"
            android:layout_width="0.5dp"
            android:layout_height="28dp"
            android:layout_gravity="center|top"
            android:background="@color/develop_tb_line" />

        <TextView
            android:id="@+id/tv_up_card_type"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:background="@drawable/up_card_circel_bg"
            android:enabled="false"
            android:gravity="center"
            android:textColor="@color/develop_tb_line"
            android:textSize="@dimen/px28" />

        <View
            android:id="@+id/line_bottom"
            android:layout_width="0.5dp"
            android:layout_height="28dp"
            android:layout_gravity="center|top"
            android:background="@color/develop_tb_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:layout_marginTop="25dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_up_card_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textColor="@color/fontcolors8"
                android:textSize="@dimen/px45" />

            <TextView
                android:id="@+id/tv_up_card_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_marginLeft="6dp"
                android:gravity="center|left"
                android:textColor="@color/fontcolors8"
                android:textSize="@dimen/px42" />

            <TextView
                android:id="@+id/tv_up_card_status"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/px30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_up_card_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:textColor="@color/fontcolors4"
                android:textSize="@dimen/px36" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>