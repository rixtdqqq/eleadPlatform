<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minHeight="@dimen/approval_item_height"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/btn_approval_choose_holiday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/left_text_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="假期额度"
            android:textColor="#000000"
            android:textSize="@dimen/approval_textsize" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center|right">

            <ImageButton
                android:id="@+id/bt_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@null"
                android:paddingRight="15dp"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"

        >

        <TextView
            android:id="@+id/tiao_xiu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="调休(0.0)"
            android:textColor="#000000"
            android:textSize="@dimen/approval_textsize" />

        <TextView
            android:id="@+id/nian_jia_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="年假(0.0)"
            android:paddingRight="15dp"
            android:textColor="#000000"
            android:textSize="@dimen/approval_textsize" />

        <TextView
            android:id="@+id/with_ill_holidays_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="带薪病假(0.0)"
            android:textColor="#000000"
            android:textSize="@dimen/approval_textsize" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/small_line_bg" />
</LinearLayout>