<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="从雷军说乐视欠款超150亿元，到乐视反击，那些真的、假的"
            android:textColor="@color/fontcolors3"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >
          <ImageView
              android:id="@+id/uc_res_one_im"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:src="@drawable/one"
              android:scaleType="fitXY"
              android:layout_weight="1"
              android:layout_marginRight="3dp"
              />
            <ImageView
                android:id="@+id/uc_res_two_im"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/two"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                />
            <ImageView
                android:id="@+id/uc_res_three_im"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/three"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/zhui_zong_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热点追踪"
                android:gravity="center_vertical"
                android:textSize="9dp"
                android:drawableLeft="@drawable/hot_spot"
                android:textColor="@color/hongse"
                android:drawablePadding="3dp"
                android:visibility="gone"
                android:layout_marginRight="7dp"
                />
            <TextView

                android:id="@+id/time_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31分钟前"

                android:textColor="@color/fontcolors4"
                android:layout_toRightOf="@id/zhui_zong_id"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/adress_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="虎嗅网"
                android:textColor="@color/fontcolors4"
                android:layout_toRightOf="@id/time_id"
                android:layout_marginLeft="7dp"

                android:textSize="9dp" />


            <TextView
                android:id="@+id/praise_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                android:drawableLeft="@drawable/commentcount_p"
                android:textColor="@color/fontcolors4"
                android:drawablePadding="3dp"
                android:layout_toRightOf="@id/adress_id"
                android:layout_marginLeft="7dp"

                android:textSize="9dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
