<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/simle_img"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/card_simle_1"
            android:layout_marginLeft="12sp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/simle_img"
            android:layout_centerVertical="true"
            android:text="那英ffffffffffff"
            android:layout_marginLeft="8sp"
            android:textColor="#91A5AF"
            />
        <com.elead.card.views.RoundCornerProgressBar
            android:id="@+id/progressbarid"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_id"
            android:layout_marginLeft="7sp"
            android:layout_marginRight="12sp"
            >
        </com.elead.card.views.RoundCornerProgressBar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentBottom="true"
            android:background="#DFE8EB">
        </View>

    </RelativeLayout>


</LinearLayout>
