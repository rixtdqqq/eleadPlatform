<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_padding_Top"
    android:paddingLeft="@dimen/card_padding_Left"
    android:paddingRight="@dimen/card_padding_Top"
    android:paddingTop="@dimen/card_padding_Top">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新定义移动互联网"
        android:textColor="@color/white"
        android:textSize="@dimen/card_title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/item_margin_top">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="出色的信号服务都是一部好的手机的基本功,强大的4G上网优选技术,能智能链接 更优的4G频段,提升4G上网体验.能多技术细节,点击此处浏览>> "
            android:textColor="@color/fontcolors3"
            android:textSize="@dimen/card_content_size" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/img_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/rdc_img1" />

    </LinearLayout>


</LinearLayout>