          -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/actionbar_line_black"


                        ></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_user_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/rel_gender_id"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="@string/my_name"
                        android:textColor="@color/fontcolors2"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/usernameId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="12dp"

                        android:paddingRight="12dp"

                        android:textColor="@color/fontcolors4"

                        android:textSize="14dp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/actionbar_line_black"


                        ></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_phone_id"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@id/rel_user_name_id"

                    >

                    <TextView
                        android:id="@+id/phone_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="12dp"

                        android:paddingRight="12dp"

                        android:textColor="@color/fontcolors4"
                        android:textSize="18dp" />


                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"


                        android:background="@drawable/actionbar_line_black"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view"
                        android:layout_alignStart="@+id/view"
                        android:layout_alignTop="@+id/phone_tex"
                        android:text="@string/my_phone"
                        android:textColor="@color/fontcolors2"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/rel_phone_id">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="@string/department"
                        android:textColor="@color/fontcolors2"
                        android:textSize="14dp" />

                    <!--

                                <ImageView
                                    android:id="@+id/back_item_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:padding="15dp"
                                    android:src="@drawable/right_arrow" />
                    -->

                    <TextView
                        android:id="@+id/partment_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="12dp"
                        android:textColor="@color/fontcolors4"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/actionbar_line_black"


                        ></View>


                </RelativeLayout>
            </RelativeLayout>

