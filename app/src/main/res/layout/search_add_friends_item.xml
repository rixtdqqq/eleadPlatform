<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contact_layout_re"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@drawable/white_bg_selector">

        <com.elead.views.CircularImageView
            android:id="@+id/photo_id"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:clickable="true"

            app:border="true"
            app:border_color="#FFFFFF"
            app:border_width="2dp"
            app:selector="true"
            app:selector_color="#30000000"
            app:selector_stroke_color="#10000000"
            app:selector_stroke_width="2dp"
            app:shadow="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/photo_id"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_contact"
                android:textColor="@color/fontcolors8"
                android:textSize="@dimen/px42" />

            <TextView
                android:id="@+id/wrok_no_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/invit_contact"
                android:textColor="@color/fontcolors4"
                android:textSize="@dimen/px36" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>