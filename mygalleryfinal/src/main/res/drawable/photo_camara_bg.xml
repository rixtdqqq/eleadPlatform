<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="2dp"
        android:bottomRightRadius="2dp"
        android:radius="9dp"
        android:topLeftRadius="2dp"
        android:topRightRadius="2dp" /><!-- 设置圆角半径 -->

    <!-- 渐变 -->
    <gradient
        android:angle="90"
        android:endColor="#3F3F3F"
        android:startColor="#4E4E4E"
        android:type="linear" />

    <!-- 间隔 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" /><!-- 各方向的间隔 -->

    <!-- 大小 -->
    <size
        android:width="50dp"
        android:height="50dp" /><!-- 宽度和高度 -->

</shape>